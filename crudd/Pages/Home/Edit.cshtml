@page
@model crudd.Pages.Home.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Edit Customer</h2>

        @if (Model.ErrorMessage.Length > 0){
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


        <form method="post">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id*</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly asp-for="id" type="text"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">First Name*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="firstname" />
                    <span asp-validation-for="firstname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Surname*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="surname" />
                    <span asp-validation-for="surname" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="register_date" />
                    <span asp-validation-for="register_date" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="phone" />
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Security Number*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="security_number" />
                    <span asp-validation-for="security_number" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Gender*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="gender" />
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nacionalidade*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="nacionalidade" />
                    <span asp-validation-for="nacionalidade" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Username*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="username" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">E-mail*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="email" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="senha" />
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>
            </div>


            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Home/Index" role="button">Cancel</a>
                    
                </div>
            
            </div>
        </form>
    </div> 
</div>