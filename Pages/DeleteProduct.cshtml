@page
@model crudd.Pages.DeleteProductModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <h2>Excluir Produto</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Tem certeza que deseja excluir o produto abaixo?
        </div>

        <div>
            <p><strong>Nome:</strong> @Model.Produto.Nome_produto</p>
            <p><strong>Marca:</strong> @Model.Produto.Marca</p>
            <p><strong>Preço:</strong> R$ @Model.Produto.Preco</p>
            <p><strong>Estoque:</strong> @Model.Produto.Estoque</p>
            <p><strong>Data de Cadastro:</strong> @Model.Produto.DataCadastro</p>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Produto.ProdutoId" />

            <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
            <a asp-page="/ListProducts" class="btn btn-secondary">Cancelar</a>
        </form>
    }
</div>
