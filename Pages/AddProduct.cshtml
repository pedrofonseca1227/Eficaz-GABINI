@page
@model crudd.Pages.CreateModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4 bg-light shadow-sm">
        <h2 class="text-center mb-4">Adicionar Novo Produto</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label fw-semibold">Nome do Produto*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nome_produto" required />
                    <span asp-validation-for="Nome_produto" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label fw-semibold">Marca*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Marca" required />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label fw-semibold">Descrição*</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Descricao" rows="3" required></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label fw-semibold">Preço*</label>
                <div class="col-sm-8">
                    <input type="number" step="0.01" class="form-control" asp-for="Preco" required />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label fw-semibold">Estoque*</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="Estoque" required />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label fw-semibold">Data de Cadastro*</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="DataCadastro" required />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image URL</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImagemUrl" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a href="~/ListProduct" class="btn btn-secondary" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div> 
</div>
