@page
@model crudd.Pages.Home.DeleteAddress
@{
    ViewData["Title"] = "DeleteAddress";
}

<div class="mx-auto rounded border p-4" style="width: 400px">
    <h2 class="text-center mb-3">Delete Addres</h2>
    <hr />
    <p>Are you sure you want to delete this Addres?</p>
    <p>Addres=@Request.Query["id_endereco"]</p>
    <hr />
    <form method="post">
        <div class="row">
            <div class="col-sm-6 d-grid">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            <div class="col-sm-6 d-grid">
                <a class="btn btn-outline-danger" href="/Home/Dashboard">Cancel</a>
            </div>
        </div>
    </form>
</div>