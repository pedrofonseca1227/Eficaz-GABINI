@page
@model crudd.Pages.Home.ReadPageModel
@{
    ViewData["Title"] = "ReadPage";
}

<h2 class="text-center my-4">User Addresses</h2>
<a class="btn btn-primary mb-3" href="/Home/CreateEndereco">New Adress</a>



<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard</h1>
    <h3 class="text-center">You must complete both registrations to register</h3>
    <a href="/Home/Dashboard" class="btn btn-danger">Quit</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Zip code</th>
            <th>Road</th>
            <th>Number</th>
            <th>Neighborhood</th>
            <th>Completment</th>
            <th>Type of residence</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UsersList) {
            <tr>
                <td>@user.cep</td>
                <td>@user.rua</td>
                <td>@user.numero</td>
                <td>@user.bairro</td>
                <td>@user.complemento</td>
                <td>@user.tipo_residencia</td>
                <td>@user.cidade</td>
                <td>@user.estado</td>
                <td>@user.pais</td>
                <td>@user.notas</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Home/EditAddress?id_endereco=@user.id_endereco">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Home/DeleteAddress?id_endereco=@user.id_endereco">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



